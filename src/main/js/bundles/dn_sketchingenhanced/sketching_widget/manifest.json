{
  "name": "dn_sketchingenhanced",
  "version": "1.0.0",
  "dependencies": {
    "esri": "^4.8.4",
    "apprt-vue": "^4.8.4",
    "apprt-vuetify": "^4.8.4",
    "sketching-tools": "^1.0.0",
    "sketching-command": "^1.0.0",
    "sketching-construction": "^1.0.0",
    "sketching-styles": "^1.0.0",
    "tool-binding": "^1.0.0",
    "snapping-manager": "^1.0.0",
    "symboleditor": "^1.0.0",
    "measurement": "^1.0.0"
  },
  "main": "",
  "CSS-Themes-Extension": [
    {
      "name": "*",
      "files": [
        "./css/sketching_widget.css"
      ]
    }
  ],
  "layout-widgets": [
    {
      "widgetRole": "sketchingWidget",
      "window": {
        "title": "${ui.windowTitle}",
        "dockable": true,
        "dockTool": "sketchingWidgetToggleTool",
        "minimizeOnClose": true,
        "marginBox": {
          "r": 50,
          "t": 45,
          "h": 136,
          "w": 275
        },
        "minSize": {
          "w": 260
        },
        "collapsable": true,
        "tools": [
          "windowCollapseTool"
        ],
        "closable": true,
        "draggable": true,
        "windowClass": "noPadding sketching noCollapseHandles",
        "windowName": "sketching"
      }
    }
  ],
  "components": [
    {
      "name": "SketchingWidgetFactory",
      "provides": [
        "dijit.Widget",
        "sketching.Widget"
      ],
      "instanceFactory": true,
      "properties": {
        "widgetRole": "sketchingWidget",
        "defaultTool": "drawpointtool",
        "firstToolGroupIds": [
          "drawpointtool",
          "sketchinglinegroup",
          "sketchingpolygongroup",
          "drawtexttool"
        ],
        "lastToolGroupIds": [
          "sketchingtoolbox"
        ],
        "footerToolIds": [
          "drawundotool",
          "drawredotool",
          "drawcanceltool"
        ],
        "tools": {
          "draw": [
            "drawpointtool",
            "drawpolylinetool",
            "drawfreehandpolylinetool",
            "drawpolygontool",
            "drawfreehandpolygontool",
            "constructionpolylinetool",
            "constructionpolygontool",
            "drawcircletool",
            "drawtriangletool",
            "drawellipsetool",
            "drawrectangletool",
            "drawarrowtool",
            "drawtexttool",
            "sketchingpolygongroup",
            "sketchinglinegroup"
          ],
          "operator": [
            "drawcopytool",
            "drawbuffertool",
            "drawselectioncopytool",
            "drawselectionbuffertool"
          ],
          "edit": [
            "drawtransformtool",
            "drawtransform1tool",
            "drawreshapetool",
            "drawreshape1tool",
            "drawreshape2tool",
            "drawremovealltool",
            "drawremovetool",
            "stylePropertiesTool",
            "drawundotool",
            "drawredotool",
            "drawcanceltool",
            "sketchinglayeradd",
            "sketchingtoolbox"
          ]
        }
      },
      "references": [
        {
          "name": "_bindingToolsToViewModel",
          "providing": "tool-binding.BindingToolsToViewModel"
        },
        {
          "name": "_styleContextChangeController",
          "providing": "sketching.StyleContextController"
        },
        {
          "name": "_constructionModel",
          "providing": "sketching-construction.SketchingConstructionModel"
        },
        {
          "name": "_mapWidgetModel",
          "providing": "map-widget.MapWidgetModel"
        },
        {
          "name": "_sketchingHandler",
          "providing": "sketching.SketchingHandler"
        },
        {
          "name": "_drawTextHelpLine",
          "providing": "sketching.drawTextHelpLine"
        },
        {
          "name": "_drawFurtherGeometries",
          "providing": "sketching.DrawFurtherGeometries"
        }
      ]
    },
    {
      "name": "sketchingWidgetToggleTool",
      "impl": "ct/tools/Tool",
      "provides": [
        "ct.tools.Tool"
      ],
      "propertiesConstructor": true,
      "properties": {
        "id": "sketchingWidgetToggleTool",
        "title": "${ui.windowTitle}",
        "tooltip": "${tool.tooltip}",
        "iconClass": "icon-pencil",
        "toolRole": "toolset",
        "togglable": true,
        "activateHandler": "activateSketching",
        "deactivateHandler": "deactivateSketching",
        "toggleSnappingSource": true,
        "groups": [
          "drawTools"
        ]
      },
      "references": [
        {
          "name": "handlerScope",
          "providing": "sketching.SketchingDeactivationHandler"
        }
      ]
    },
    {
      "name": "SetFonts",
      "provides": [
        "sketching.setFonts"
      ],
      "immediate": true,
      "properties": {
        "url": "resource('fonts')"
      }
    },
    {
      "name": "DrawTextHelpLine",
      "provides": [
        "sketching.drawTextHelpLine"
      ]
    },
    {
      "name": "SketchingDeactivationHandler",
      "provides": "sketching.SketchingDeactivationHandler",
      "references": [
        {
          "name": "_sketchingHandler",
          "providing": "sketching.SketchingHandler"
        },
        {
          "name": "_eventService",
          "providing": "ct.framework.api.EventService"
        }
      ]
    }
  ]
}

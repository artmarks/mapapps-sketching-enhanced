{
    "name": "highlight",
    "version": "1.0.0",
    "title": "Highlight Graphics",
    "description": "Highlight Graphics",
    "vendor": "con terra GmbH",
    "main": "",
    "i18n": [],
    "dependencies": {
        "apprt-core": "^4.8.4"
    },
    "components": [
        {
            "name": "HighlightHandler",
            "provides": [
                "highlight.HighlightHandler",
                "ct.framework.api.EventHandler"
            ],
            "properties": {
                "id": "highlightHandler",
                "zoomToHighlight": false,
                "highlightLayerId": "_highlightGraphicLayer_",
                "pointSymbol": {
                    "color": [
                        102,
                        205,
                        0,
                        100
                    ],
                    "size": 12,
                    "type": "esriSMS",
                    "style": "esriSMSCircle",
                    "outline": {
                        "color": [
                            0,
                            0,
                            0,
                            255
                        ],
                        "width": 1,
                        "type": " esriSLS",
                        "style": "esriSLSSolid"
                    }
                },
                "polygonSymbol": {
                    "type": "esriSFS",
                    "color": [
                        102,
                        205,
                        0,
                        100
                    ],
                    "outline": {
                        "color": [
                            0,
                            0,
                            0,
                            255
                        ],
                        "style": "esriSLSSolid",
                        "type": "esriSLS",
                        "width": 1.3
                    },
                    "size": 16,
                    "style": "esriSFSSolid",
                    "xoffset": 0,
                    "yoffset": 0
                },
                "polylineSymbol": {
                    "color": [
                        64,
                        64,
                        64,
                        255
                    ],
                    "style": "esriSLSSolid",
                    "type": "esriSLS",
                    "width": 2
                },
                "Event-Topics": [
                    {
                        "topic": "edit/features/highlight/add",
                        "method": "addHighlightFeatures"
                    },
                    {
                        "topic": "edit/features/highlight/remove",
                        "method": "removeHighlightFeatures"
                    },
                    {
                        "topic": "edit/geometries/highlight/add",
                        "method": "addGraphicsByGeometry"
                    },
                    {
                        "topic": "edit/graphics/highlight/add",
                        "method": "addGraphics"
                    },
                    {
                        "topic": "edit/graphics/highlight/remove",
                        "method": "removeGraphics"
                    },
                    {
                        "topic": "edit/highlight/clear",
                        "method": "clearHighlight"
                    },
                    {
                        "topic": "edit/graphics/clear",
                        "method": "clearGraphics"
                    }
                ]
            },
            "references": [
                {
                    "name": "_zoomToHandler",
                    "providing": "highlight.ZoomToHandler",
                    "cardinality": "0..1"
                },
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        }
    ]
}

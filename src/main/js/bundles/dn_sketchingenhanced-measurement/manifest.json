{
    "name": "dn_sketchingenhanced-measurement",
    "version": "1.0.1",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-sketching-enhanced",
    "layer": "module",
    "i18n": [
        "bundle"
    ],
    "main": "",
    "dependencies": {
        "esri": "^4.7.2"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "css/measurement.css"
            ]
        }
    ],
    "components": [
        {
            "name": "MeasurementController",
            "provides": [
                "dn_sketchingenhanced-measurement.MeasurementController",
                "dn_sketchingenhanced.Action"
            ],
            "properties": {
                "decimalPlacesMeter": 1,
                "decimalPlacesKiloMeter": 2,
                "sketch": {
                    "textSymbol": {
                        "type": "esriTS",
                        "color": {
                            "r": 255,
                            "g": 0,
                            "b": 0,
                            "a": 1
                        },
                        "backgroundColor": [
                            255,
                            255,
                            255,
                            1
                        ],
                        "horizontalAlignment": "left",
                        "font": {
                            "family": "Arial",
                            "size": 16,
                            "style": "normal",
                            "weight": "bold",
                            "decoration": "none"
                        },
                        "haloColor": {
                            "r": 255,
                            "g": 255,
                            "b": 255,
                            "a": 1
                        },
                        "haloSize": 2
                    },
                    "polylineSymbol": {
                        "color": {
                            "r": 255,
                            "g": 0,
                            "b": 0,
                            "a": 1
                        },
                        "style": "solid",
                        "type": "esriSLS",
                        "width": 2
                    }
                }
            },
            "references": [
                {
                    "name": "_sketchingHandler",
                    "providing": "dn_sketchingenhanced.SketchingHandler"
                }
            ]
        }
    ]
}

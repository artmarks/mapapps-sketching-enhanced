{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "map-init",
            "map-preload-2D",
            "toolset",
            "toolrules",
            "banner",
            "mapnavigation",
            "toc",
            "dn_sketchingenhanced"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_sketchingenhanced": {
            "Config": {
                "measurement": true,
                "firstToolGroupIds": [
                    "drawpointtool",
                    "sketchinglinegroup",
                    "sketchingpolygongroup",
                    "drawtexttool"
                ],
                "lastToolGroupIds": [
                    "sketchingtoolbox"
                ],
                "footerToolIds": [
                    "drawundotool",
                    "drawredotool",
                    "drawcanceltool"
                ]
            }
        },
        "dn_sketchingenhanced-measurement": {
            "Config": {
                "decimalPlacesMeter": 1,
                "decimalPlacesKiloMeter": 2,
                "showLineMeasurementsAtPolylines": true,
                "showLineMeasurementsAtPolygons": false,
                "pointSRS": "4326",
                "pointCoordPlaces": "3",
                "pointCoordUnitSymbolX": "°E",
                "pointCoordUnitSymbolY": "°N",
                "srs":{
                    "geodetic": [
                        4326,
                        3857,
                        4258
                    ],
                    "planar": [
                        2398,
                        2399,
                        25832,
                        25833,
                        31466,
                        31467,
                        31468,
                        31469
                    ]
                }
            }
        },
        "dn_sketchingenhanced-tools": {
            "Config": {
                "graphicLayerId": "sketchingGraphicLayer",
                "graphicLayerTitle": "${layerTitle}",
                "sketch": {
                    "updateOnGraphicClick": false,
                    "defaultUpdateOptions": {
                        "tool": "reshape",
                        "enableMoveAllGraphics": false,
                        "enableRotation": false,
                        "enableScaling": false,
                        "preserveAspectRatio": false,
                        "toggleToolOnClick": false,
                        "multipleSelectionEnabled": false
                    },
                    "textSymbol": {
                        "type": "esriTS",
                        "color": {
                            "r": 64,
                            "g": 64,
                            "b": 64,
                            "a": 1
                        },
                        "backgroundColor": [
                            0,
                            0,
                            0,
                            0
                        ],
                        "horizontalAlignment": "left",
                        "font": {
                            "family": "Arial",
                            "size": 18,
                            "style": "normal",
                            "weight": "normal",
                            "decoration": "none"
                        }
                    },
                    "pointSymbol": {
                        "color": {
                            "r": 102,
                            "g": 205,
                            "b": 0,
                            "a": 0.4
                        },
                        "radius": 12,
                        "type": "esriSMS",
                        "shape": "circle",
                        "outline": {
                            "color": {
                                "r": 64,
                                "g": 64,
                                "b": 64,
                                "a": 1
                            },
                            "width": 1,
                            "type": " esriSLS",
                            "style": "solid"
                        }
                    },
                    "polygonSymbol": {
                        "type": "esriSFS",
                        "color": {
                            "r": 102,
                            "g": 205,
                            "b": 0,
                            "a": 0.4
                        },
                        "outline": {
                            "color": {
                                "r": 64,
                                "g": 64,
                                "b": 64,
                                "a": 1
                            },
                            "style": "solid",
                            "type": "esriSLS",
                            "width": 1.3
                        },
                        "size": 16,
                        "style": "solid",
                        "xoffset": 0,
                        "yoffset": 0
                    },
                    "polylineSymbol": {
                        "color": {
                            "r": 64,
                            "g": 64,
                            "b": 64,
                            "a": 1
                        },
                        "style": "solid",
                        "type": "esriSLS",
                        "width": 2
                    }
                }
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "esri_street",
                        "title": "Straßenkarte (grau)",
                        "thumbnailUrl": "resource('${app}:/images/streets.png')",
                        "basemap": "gray-vector",
                        "selected": true
                    }
                ],
                "map": {
                    "layers": []
                },
                "view": {
                    "viewmode": "2D",
                    "center": {
                        "x": 774853,
                        "y": 6610677,
                        "spatialReference": 3857
                    },
                    "scale": 140000
                }
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "drawer_button",
                                "attachTo": "map_topleft",
                                "props": {
                                    "layoutIndex": 0
                                }
                            }
                        ]
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "sketchingEnhancedWidgetToggleTool"
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    },
                    {
                        "id": "drawer_left",
                        "title": "Werkzeuge",
                        "cssClass": "ct-main-app-menu",
                        "tools": [
                            "sketchingEnhancedWidgetToggleTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "drawer_button"
                        },
                        "container": "ignore",
                        "windowType": "drawer_left"
                    }
                ]
            }
        }
    }
}
